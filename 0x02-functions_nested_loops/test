#include "main.h"

/**
 * times_table - print the 9 times table
 */
void times_table(void)
{
        int i, j, prod;

        for (i = 0; i <= 9; i++)
        {
                for (j = 0; j <= 9; j++)
                {
                        prod = i * j;

                        if (j > 0)
                        {
                                _putchar(',');
                                _putchar(' ');
                        }

                        if (prod <= 9)
                        {
                                _putchar(' ');
                                _putchar(' ');
                                _putchar('0' + prod);
                        }
                        else
                        {
                                _putchar(' ');
                                _putchar((prod / 10) + '0');
                                _putchar((prod % 10) + '0');
                        }
                }
                _putchar('\n');
        }
}

